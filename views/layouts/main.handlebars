<script>
    $(document).ready(() => {
        $('#burger-btn').on('click', (e) => {
            e.preventDefault();
            $.ajax('/burger', {
                method: 'POST',
                data: {burger_name: $('#burger').val()}
            }).then(() => {
                location.reload();
            })
        });

         $('.devour-btn').on('click', (e) => {
            e.preventDefault();
            $.ajax(`/burger/${e.currentTarget.value}`, {
                method: 'PUT'
            });
            location.reload();
        });
    });
</script>
